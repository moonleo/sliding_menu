                  android:text="第2个菜单项"
                  android:textSize="20sp"
                  android:layout_toRightOf="@id/img2"
                  android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
